files:
  "/opt/elasticbeanstalk/hooks/appdeploy/pre/01_fix_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      mkdir -p /var/app/data
      chown -R webapp:webapp /var/app/data
      chmod -R 755 /var/app/data
      if [ -f /var/app/data/committee_system.db ]; then
        chown webapp:webapp /var/app/data/committee_system.db
        chmod 664 /var/app/data/committee_system.db
      fi
      echo "Permissions fixed for /var/app/data"
