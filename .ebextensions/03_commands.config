container_commands:
  01_create_data_dir:
    command: "mkdir -p /var/app/data && chmod 755 /var/app/data"
    ignoreErrors: false
  02_run_migrations:
    command: "python migrate_db.py"
    ignoreErrors: false
  03_import_data_if_needed:
    command: |
      if [ -f "db_export.json" ]; then
        python upload_db.py import || echo "Import skipped or failed (may not be needed)"
      else
        echo "No export file found - skipping import"
      fi
    ignoreErrors: true
  04_verify_persistence:
    command: "python verify_persistence.py || echo 'Persistence verification failed (non-critical)'"
    ignoreErrors: true
